- content_for :content do

  - cache_or_admin [@menu, @section] do
    / = render :partial => 'menus/navigation'

    = @menu.pdf_link


    %section#menu_container{:class => "#{'chili_pepper_admin' if admin_signed_in?}"}

      %section#menu_header{:class => "#{'price_featured' if @menu.price?}"}
  
        %hgroup
          = @menu.display_price
          %h1
            = @menu.name
          = @menu.display_availability
        = @menu.display_description

        - if admin_signed_in?
          %ul.admin
            %li.edit
              -# link_to "Edit Menu", custom_edit_menu_path(@menu, @section), :class => "admin-controls-edit", :remote => true
            %li.delete
              = link_to "Delete Menu", menu_path(@menu), :method => :delete, :class => "admin-controls-delete"
          

      %section#menu_content
      
        = yield(:menu_content) or yield
      / = @menu.footnotes
    


            
  
          
          

= render :file => 'layouts/application' 